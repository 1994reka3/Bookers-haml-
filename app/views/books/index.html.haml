%h2
  %strong
    Books

%table
  %tr
    %th
      Title
    %th
      Body
  - @books.each do |book|
    %tr
      %td
        = book.title
      %td
        = book.body
      %td
        = link_to "Show", book_path(book)
      %td
        = link_to "Edit", edit_book_path(book)
      %td
        = link_to "Destroy", book_path(book), method: :delete

%h3
  %strong
    New book
%p
  =form_with(model: @book, local: true) do |f|
    %p
      Title
    = f.text_field :title
    %p
      Body
    = f.text_area :body
    %p
      = f.submit " Create Book "
